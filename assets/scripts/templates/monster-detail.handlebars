  <img class="img-responsive monster-holder" src="assets/images/{{monster.home}}.png">
 <ul class="list-unstyled" data-id="{{monster.id}}">
   <div class="col-md-4"><img class="monster-image-large {{monster.type}}-{{monster.mood}}-{{monster.status}}" src=""</div>
   <li>Name: {{monster.name}} <button class="rename_monster btn btn-primary btn-xs">Rename</button></li>
